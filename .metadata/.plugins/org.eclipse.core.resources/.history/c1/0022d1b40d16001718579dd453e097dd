public class Spreadsheet implements Grid  
{
	int row;
	int cols;
	//Cell [][] spreadsheet = new Cell[20][12];
	private Cell[][] spreadsheet;
	public Spreadsheet(){
		//Cell[][] spreadsheet = new Cell[20][12];
		this.row= getRows();
		this.cols= getCols();
		spreadsheet= new Cell[20][12];
		for (int i = 0; i < 20; i++) {
			for (int j = 0; j < 12; j++) {
				spreadsheet[i][j] =  new EmptyCell();
			}
		}
		
	}
	
	@Override
	public String processCommand(String command)
	{
		SpreadsheetLocation loca;
		int row;
		int col;
		String location = "";
		String[] commandSplit = command.split(" ");

		if (command.equals("")){
			return "";
		} else if(command.equalsIgnoreCase("clear")){
			clear();
			return getGridText();	
		} else if (command.length() <= 3) {
			loca = new SpreadsheetLocation(command);
			return spreadsheet[loca.getRow()][loca.getCol()].fullCellText();
		}else if((commandSplit[0].equalsIgnoreCase("clear")) && ((commandSplit[1].length() <= 3)&&(commandSplit[1].length()>0))){
			location = commandSplit[1];
			SpreadsheetLocation lo= new SpreadsheetLocation(commandSplit[1]);
			clearCell(lo);
			return getGridText();
		}else if(commandSplit[1].equals("=")){
			location = commandSplit[0];
			loca = new SpreadsheetLocation(location);
			row = loca.getRow();
			col = loca.getCol();
			String userIn;
			userIn = command.substring(command.indexOf("\""), command.length());
			userIn = userIn.substring(1, userIn.length()-1);
			spreadsheet[row][col] = new TextCell(userIn); 
			return getGridText();
		}else{
			loca = new SpreadsheetLocation(command);
			Cell getCell = spreadsheet[loca.getRow()][loca.getCol()];
			return getCell.toString();
		}
		/*
		String [] arr1= command.split(" ",3);
	    if (command.equals("")){
	    	return "";
	    }
		
		if  (arr1.length == 1){
			if (command.equalsIgnoreCase("clear")){
