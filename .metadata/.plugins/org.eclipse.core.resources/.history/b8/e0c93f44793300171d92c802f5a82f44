package textExcel;

public class PercentCell extends RealCell{

	private String input;
	
	public PercentCell(String value) {
		super(value);
	}
	

	@Override
	public String abbreviatedCellText() {
		
		String store1= input + "";
		if ((store1.indexOf(1)+"").equals(".")){
			return input.indexOf(0) + "%";
		}
		if (input.substring(0, input.indexOf(".")).length()>9){
//		String percentage= super.getDoubleValue() + "%";
//		percentage += "          ";
			String store= input.substring(0, input.indexOf("."));

		return store.substring(0,9) + "%";
		}
		else { 
			return input.substring(0, input.indexOf(".")) +"%";
			
		}
}

	@Override
	public double getDoubleValue(){
		return Double.parseDouble(super.fullCellText().substring(0, super.fullCellText().length()-1));
	}
	//get rid of the percent sign at the end 
	
	@Override
	public String fullCellText() {
		return (getDoubleValue()/100.0 + "");
	}
}
